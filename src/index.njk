---
layout: layouts/base.njk
---

{% block content %}
<!-- Hero Section -->
<section class="bg-black text-white relative py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">{{ site.title }}</h1>
      <p class="text-xl md:text-2xl mb-8">{{ site.description }}</p>
      <div class="bg-black bg-opacity-70 p-6 rounded-lg">
        <div class="mb-4">
          <h2 class="text-xl font-medium mb-2">Listen to the Trailer</h2>
          <!-- Replace with your actual Spotify embed code -->
          <div class="aspect-w-16 aspect-h-9">
            <iframe src="https://open.spotify.com/embed/episode/YOUR_TRAILER_ID" 
                    width="100%" height="152" frameborder="0" allowtransparency="true" 
                    allow="encrypted-media"></iframe>
          </div>
        </div>
        <div class="flex flex-wrap justify-center gap-4 mt-6">
          <a href="#" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg">
            Spotify
          </a>
          <a href="#" class="bg-purple-600 hover:bg-purple-700 text-white px-4 py-2 rounded-lg">
            Apple Podcasts
          </a>
          <a href="#" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
            Google Podcasts
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Latest Episodes Section -->
<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center mb-10">
      <h2 class="text-3xl font-bold">Latest Episodes</h2>
      <a href="/episodes" class="text-green-600 hover:text-green-800 font-medium">View all episodes â†’</a>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Will be replaced with actual episodes later -->
      <div class="bg-white border border-gray-200 rounded-lg overflow-hidden shadow-md">
        <div class="w-full h-48 bg-gray-200"></div>
        <div class="p-6">
          <span class="inline-block px-3 py-1 text-sm font-semibold bg-green-100 text-green-800 rounded-full mb-4">Episode 1</span>
          <h3 class="text-xl font-bold mb-2">The Future of Sustainable Energy</h3>
          <p class="text-gray-600 mb-4">We explore how energy systems are being reimagined with Dr. Jane Smith, leading researcher in renewable energy.</p>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-500">32 minutes</span>
            <a href="/episodes/episode-1" class="text-green-600 hover:text-green-800 font-medium flex items-center">
              Listen
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Newsletter Section -->
<section class="py-16 bg-gray-100">
  <div class="container mx-auto px-4">
    <div class="max-w-lg mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">Stay Updated</h2>
      <p class="text-gray-600 mb-8">Get notified when new episodes are released and receive exclusive content.</p>
      <form class="flex flex-col sm:flex-row gap-4">
        <input type="email" placeholder="Your email address" class="flex-grow px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-600 focus:border-transparent" required />
        <button type="submit" class="px-6 py-3 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-600 focus:ring-offset-2">
          Subscribe
        </button>
      </form>
    </div>
  </div>
</section>
{% endblock %}