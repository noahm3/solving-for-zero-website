---
layout: layouts/base.njk
---

{% block content %}
<article class="py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <span class="inline-block px-3 py-1 text-sm font-semibold bg-green-100 text-green-800 rounded-full mb-4">Episode {{ episode_number }}</span>
      <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
      <p class="text-gray-600 mb-8">{{ description }}</p>
      
      <!-- Custom player button -->
      <div class="mb-4">
        <button 
          class="episode-play-btn inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition" 
          data-audio-url="https://open.spotify.com/episode/{{ spotify_id }}"
          data-title="{{ title }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" class="mr-2">
            <path d="M8 5v14l11-7z" fill="currentColor"/>
          </svg>
          Play in Player
        </button>
      </div>
      
      <!-- Episode player -->
      <div class="mb-8">
        <iframe src="https://open.spotify.com/embed/episode/{{ spotify_id }}" 
                width="100%" height="152" frameborder="0" allowtransparency="true" 
                allow="encrypted-media"></iframe>
      </div>
      
      <!-- Show notes -->
      <div class="prose prose-lg max-w-none">
        {{ content | safe }}
      </div>
    </div>
  </div>
</article>
{% endblock %}