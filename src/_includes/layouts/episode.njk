---
layout: layouts/base.njk
---

{% block content %}
<article class="py-12">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <span class="inline-block px-3 py-1 text-sm font-semibold bg-green-100 text-green-800 rounded-full mb-4">Episode {{ episode_number }}</span>
      <h1 class="text-3xl md:text-4xl font-bold mb-4">{{ title }}</h1>
      <p class="text-gray-600 mb-8">{{ description }}</p>
      
      <!-- Episode player -->
      <div class="mb-8">
        <iframe src="https://open.spotify.com/embed/episode/{{ spotify_id }}" 
                width="100%" height="152" frameborder="0" allowtransparency="true" 
                allow="encrypted-media"></iframe>
      </div>
      
      <!-- Show notes -->
      <div class="prose prose-lg max-w-none">
        {{ content | safe }}
      </div>
    </div>
  </div>
</article>
{% endblock %}